<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="TKMJob" parent="TKMJob-parentBean"/>
    <bean id="TKMJob-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="dataObjectClass" value="org.kuali.kpme.core.tkmdocument.tkmjob.KhrEmployeeJob"/>
        <property name="objectLabel" value="TKMJob"/>
        <property name="attributes">
            <list>
                <ref bean="TKMJob-hrJobId"/>
                <ref bean="TKMJob-principalId"/>
                <ref bean="TKMJob-principalName"/>
                <ref bean="TKMJob-name"/>
                <ref bean="TKMJob-firstName"/>
                <ref bean="TKMJob-lastName"/>
                <ref bean="TKMJob-jobNumber"/>
                <ref bean="TKMJob-effectiveDate"/>
                <ref bean="TKMJob-relativeEffectiveDate"/>
                <ref bean="TKMJob-endDate"/>
                <ref bean="TKMJob-dept"/>
                <ref bean="TKMJob-hrSalGroup"/>
                <ref bean="TKMJob-timestamp"/>
                <ref bean="TKMJob-location"/>
                <ref bean="TKMJob-hrPayType"/>
                <ref bean="TKMJob-payGrade"/>
                <ref bean="TKMJob-standardHours"/>
                <ref bean="TKMJob-fte"/>
                <ref bean="TKMJob-compRate"/>
                <ref bean="TKMJob-primaryIndicator"/>
                <ref bean="TKMJob-history"/>
                <ref bean="TKMJob-eligibleForLeave"/>
                <ref bean="TKMJob-active"/>
                <ref bean="TKMJob-positionNbr"/>
                <ref bean="TKMJob-flsaStatus"/>
            </list>
        </property>
        <property name="collections">
            <list>
                <bean parent="CollectionDefinition">
                    <property name="dataObjectClass" value="org.kuali.kpme.core.assignment.Assignment"/>
                    <property name="name" value="assignments"/>
                    <property name="shortLabel" value="Assignments"/>
                    <property name="label" value="Assignments"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="TKMJob-hrJobId" parent="TKMJob-hrJobId-parentBean"/>

    <bean id="TKMJob-hrJobId-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Job Id"/>
        <property name="maxLength" value="60"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="60"/>
        </property>
        <property name="name" value="hrJobId"/>
        <property name="label" value="Job Id"/>
    </bean>

    <bean id="TKMJob-relativeEffectiveDate" parent="TKMJob-effectiveDate-parentBean" p:name="relativeEffectiveDate">
        <property name="controlField">
            <bean parent="Uif-TextControl"/>
        </property>
    </bean>

    <bean id="TKMJob-effectiveDate" parent="TKMJob-effectiveDate-parentBean" />
    <bean id="TKMJob-effectiveDate-parentBean" abstract="true"
          parent="AttributeDefinition">
        <property name="shortLabel" value="Effective Date" />
        <property name="maxLength" value="10" />
        <property name="controlField">
            <bean parent="Uif-DateControl" />
        </property>
        <property name="name" value="effectiveDate" />
        <property name="label" value="Effective Date" />
    </bean>

    <bean id="TKMJob-endDate" parent="TKMJob-endDate-parentBean" />
    <bean id="TKMJob-endDate-parentBean" abstract="true"
          parent="AttributeDefinition">
        <property name="shortLabel" value="End Date" />
        <property name="maxLength" value="10" />
        <property name="controlField">
            <bean parent="Uif-DateControl" />
        </property>
        <property name="name" value="endDate" />
        <property name="label" value="End Date" />
    </bean>

    <!-- The validation type and length on this may be wrong -->
    <bean id="TKMJob-hrPayType" parent="TKMJob-hrPayType-parentBean"/>
    <bean id="TKMJob-hrPayType-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Pay Type"/>
        <property name="maxLength" value="5"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="5"/>
        </property>
        <property name="name" value="hrPayType"/>
        <property name="label" value="Pay Type"/>
    </bean>

    <!-- The validation type and length on this may be wrong -->
    <bean id="TKMJob-payGrade" parent="TKMJob-payGrade-parentBean"/>
    <bean id="TKMJob-payGrade-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
        <property name="name" value="payGrade" />
        <property name="label" value="Pay Grade" />
    </bean>
    <!-- The validation type and length on this may be wrong -->
    <bean id="TKMJob-location" parent="TKMJob-location-parentBean"/>
    <bean id="TKMJob-location-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
        <property name="name" value="location" />
        <property name="label" value="Job Location" />
    </bean>

    <bean id="TKMJob-positionNbr" parent="TKMJob-positionNbr-parentBean"/>
    <bean id="TKMJob-positionNbr-parentBean" abstract="true"
          parent="AttributeDefinition">
        <property name="shortLabel" value="Location"/>
        <property name="maxLength" value="27"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="27"/>
        </property>
        <property name="name" value="positionNumber"/>
        <property name="label" value="Position Number"/>
    </bean>

    <!-- The validation type and length on this may be wrong -->
    <bean id="TKMJob-standardHours" parent="TKMJob-standardHours-parentBean"/>
    <bean id="TKMJob-standardHours-parentBean" abstract="true"
          parent="AttributeDefinition">
        <property name="shortLabel" value="Standard Hours"/>
        <property name="maxLength" value="27"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="27"/>
        </property>
        <property name="name" value="standardHours"/>
        <property name="label" value="Standard Hours"/>
    </bean>

    <bean id="TKMJob-fte" parent="TKMJob-fte-parentBean"/>
    <bean id="TKMJob-fte-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="FTE"/>
        <property name="maxLength" value="5"/>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="6"/>
        </property>
        <property name="name" value="fte"/>
        <property name="label" value="FTE"/>
    </bean>

    <bean id="TKMJob-compRate" parent="TKMJob-compRate-parentBean"/>
    <bean id="TKMJob-compRate-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Compensation Rate"/>
        <property name="maxLength" value="25"/>
        <property name="validCharactersConstraint">
            <bean parent="ValidCharactersConstraint" p:value="((\+|-)?([0-9]{1,3}(\.[0-9]{1,2})?))()"
                  p:messageKey="error.jobDocument.bigDecimal"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="25"/>
        </property>
        <property name="name" value="compRate"/>
        <property name="label" value="Compensation Rate"/>
    </bean>

    <bean id="TKMJob-principalId" parent="TKMJob-principalId-parentBean"/>
    <bean id="TKMJob-principalId-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Principal Id" />
        <property name="maxLength" value="40" />
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="40"/>
        </property>
        <property name="name" value="principalId" />
        <property name="label" value="Principal Id" />
    </bean>

    <bean id="TKMJob-firstName" parent="TKMJob-firstName-parentBean"/>
    <bean id="TKMJob-firstName-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="First Name"/>
        <property name="maxLength" value="40"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="40"/>
        </property>
        <property name="name" value="firstName"/>
        <property name="label" value="First Name"/>
    </bean>

    <bean id="TKMJob-lastName" parent="TKMJob-lastName-parentBean"/>
    <bean id="TKMJob-lastName-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Last Name"/>
        <property name="maxLength" value="80"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="false"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="80"/>
        </property>
        <property name="name" value="lastName"/>
        <property name="label" value="Last Name"/>
    </bean>

    <bean id="TKMJob-principalName" parent="TKMJob-principalName-parentBean"/>
    <bean id="TKMJob-principalName-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Name" />
        <property name="maxLength" value="30" />
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint">
                <property name="allowWhitespace" value="true"/>
            </bean>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
        <property name="name" value="principalName" />
        <property name="label" value="Principal Name" />
    </bean>

    <bean id="TKMJob-name" parent="TKMJob-name-parentBean"/>
    <bean id="TKMJob-name-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Name"/>
        <property name="maxLength" value="30"/>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
        <property name="name" value="name"/>
        <property name="label" value="Name"/>
    </bean>

    <bean id="TKMJob-jobNumber" parent="TKMJob-jobNumber-parentBean"/>
    <bean id="TKMJob-jobNumber-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Job Number" />
        <property name="maxLength" value="3" />
        <property name="validCharactersConstraint">
            <bean parent="NumericPatternConstraint" />
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="3" />
        </property>
        <property name="name" value="jobNumber" />
        <property name="label" value="Job Number" />
    </bean>

    <bean id="TKMJob-dept" parent="TKMJob-dept-parentBean"/>
    <bean id="TKMJob-dept-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="forceUppercase" value="true" />
        <property name="maxLength" value="21" />
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="21" />
        </property>
        <property name="name" value="dept" />
        <property name="label" value="Department" />
        <property name="description" value="dept" />
    </bean>

    <bean id="TKMJob-primaryIndicator" parent="TKMJob-primaryIndicator-parentBean"/>
    <bean id="TKMJob-primaryIndicator-parentBean" abstract="true" parent="AttributeReference-genericBoolean">
        <property name="shortLabel" value="Primary Indicator"/>
        <property name="name" value="primaryIndicator"/>
        <property name="label" value="Primary Indicator"/>
        <property name="controlField">
            <bean parent="Uif-CheckboxControl"/>
        </property>
    </bean>

    <bean id="TKMJob-hrSalGroup" parent="TKMJob-hrSalGroup-parentBean"/>
    <bean id="TKMJob-hrSalGroup-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="forceUppercase" value="true" />
        <property name="maxLength" value="10" />
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="10" />
        </property>
        <property name="name" value="hrSalGroup" />
        <property name="label" value="Sal Group" />
        <property name="description" value="hrSalGroup" />
    </bean>

    <!-- Eligible For Leave -->
    <bean id="TKMJob-eligibleForLeave" parent="TKMJob-eligibleForLeave-parentBean"/>
    <bean id="TKMJob-eligibleForLeave-parentBean" abstract="true" parent="AttributeReference-genericBoolean">
        <property name="shortLabel" value="Eligible For Leave"/>
        <property name="name" value="eligibleForLeave"/>
        <property name="label" value="Eligible For Leave"/>
        <property name="controlField">
            <bean parent="Uif-CheckboxControl"/>
        </property>
    </bean>


    <!-- FLSA Status -->
    <bean id="TKMJob-flsaStatus" parent="TKMJob-flsaStatus-parentBean"/>
    <bean id="TKMJob-flsaStatus-parentBean" abstract="true"
          parent="AttributeDefinition">
        <property name="shortLabel" value="FLSA Status"/>
        <property name="controlField">
            <bean parent="Uif-HorizontalRadioControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.kpme.core.flsa.TkFlsaStatusKeyValueFinder"/>
        </property>
        <property name="name" value="flsaStatus"/>
        <property name="label" value="FLSA Status"/>
    </bean>

    <bean id="TKMJob-timestamp" parent="TKMJob-timestamp-parentBean" />
    <bean id="TKMJob-timestamp-parentBean" abstract="true" parent="KpmeAttributeReference-timestamp" />

    <!-- history -->
    <bean id="TKMJob-history" parent="TKMJob-history-parentBean" />
    <bean id="TKMJob-history-parentBean" abstract="true" parent="KpmeAttributeReference-history"/>

    <bean id="TKMJob-active" parent="TKMJob-active-parentBean" />
    <bean id="TKMJob-active-parentBean" abstract="true" parent="KpmeAttributeReference-active" />

    <bean id="TKMJob-LookupView" parent="TKMJob-LookupView-parentBean" />
    <bean id="TKMJob-LookupView-parentBean" abstract="true"
          parent="Uif-LookupView">
        <property name="dataObjectClassName" value="org.kuali.kpme.core.tkmdocument.tkmjob.KhrEmployeeJob"/>
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="principalId" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="firstName" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="lastName" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="jobNumber" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="dept" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="positionNumber" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="hrPayType" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="effectiveDate" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="active" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="history"
                      p:defaultValue="N" />
            </list>
        </property>

        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="principalId" />
                <bean parent="Uif-DataField" p:propertyName="principalName" />
                <bean parent="Uif-DataField" p:propertyName="jobNumber" />
                <bean parent="Uif-DataField" p:propertyName="dept" />
                <bean parent="Uif-DataField" p:propertyName="location" />
                <bean parent="Uif-DataField" p:propertyName="positionNumber" />
                <bean parent="Uif-DataField" p:propertyName="eligibleForLeave" />
                <bean parent="Uif-DataField" p:propertyName="effectiveDate" />
                <bean parent="Uif-DataField" p:propertyName="timestamp" />
                <bean parent="Uif-DataField" p:propertyName="primaryIndicator" />
                <bean parent="Uif-DataField" p:propertyName="active" />
            </list>
        </property>
    </bean>
    
    
    
    <bean id="KHREmployeeJobMaintenanceDocument" parent="KHREmployeeJobMaintenanceDocument-parentBean"/>
    <bean id="KHREmployeeJobMaintenanceDocument-parentBean" abstract="true" parent="JobMaintenanceDocument-parentBean" p:dataObjectClass="org.kuali.kpme.core.tkmdocument.tkmjob.KhrEmployeeJob"/>

</beans>


