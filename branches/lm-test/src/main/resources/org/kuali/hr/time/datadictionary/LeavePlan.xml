<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="LeavePlan" parent="LeavePlan-parentBean" />

	<bean id="LeavePlan-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.kuali.hr.lm.leaveplan.LeavePlan" />
		<property name="titleAttribute" value="id" />
		<property name="objectLabel" value="LeavePlan" />
		<property name="inquiryDefinition">
			<ref bean="LeavePlan-inquiryDefinition" />
		</property>
		<property name="lookupDefinition">
			<ref bean="LeavePlan-lookupDefinition" />
		</property>
		<property name="attributes">
			<list>
				<ref bean="LeavePlan-lmLeavePlanId" />
				<ref bean="LeavePlan-leavePlan" />
				<ref bean="LeavePlan-description" />
				<ref bean="LeavePlan-salaryGroup" />
				<ref bean="LeavePlan-location" />
				<ref bean="LeavePlan-unitOfTime" />
				<ref bean="LeavePlan-effectiveDate" />
				<ref bean="LeavePlan-active" />
				<ref bean="LeavePlan-timestamp" />
			</list>
		</property>
		<property name="relationships">
  		<list>
            <bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="locationObj"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="location" p:targetName="location"/>
                </list>
              </property>
            </bean>
            <bean parent="RelationshipDefinition">
              <property name="objectAttributeName" value="salGroupObj"/>
              <property name="primitiveAttributes">
                <list>
                  <bean parent="PrimitiveAttributeDefinition" p:sourceName="salaryGroup" p:targetName="tkSalGroup"/>
                </list>
              </property>
            </bean>
         </list>
         </property>	 
	</bean>

	<!-- Attribute Definitions -->

	<bean id="LeavePlan-lmLeavePlanId" parent="LeavePlan-lmLeavePlanId-parentBean" />
	<bean id="LeavePlan-lmLeavePlanId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Leave Plan Id" />
		<property name="maxLength" value="7" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="7" />
		</property>
		<property name="name" value="lmLeavePlanId" />
		<property name="label" value="Leave Plan Id" />
	</bean>


	<bean id="LeavePlan-leavePlan" parent="LeavePlan-leavePlan-parentBean" />
	<bean id="LeavePlan-leavePlan-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Leave Plan" />
		<property name="maxLength" value="15" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="45" />
		</property>
		<property name="name" value="leavePlan" />
		<property name="label" value="Leave Plan" />
	</bean>

	<bean id="LeavePlan-description" parent="LeavePlan-description-parentBean" />
	<bean id="LeavePlan-description-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Description" />
		<property name="maxLength" value="30" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="30" />
		</property>
		<property name="name" value="description" />
		<property name="label" value="Description" />
	</bean>
	
	<bean id="LeavePlan-salaryGroup" parent="LeavePlan-salaryGroup-parentBean" />
	<bean id="LeavePlan-salaryGroup-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Salary Group" />
		<property name="maxLength" value="10" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="10" />
		</property>
		<property name="name" value="salaryGroup" />
		<property name="label" value="Salary Group" />
	</bean>
	
	<bean id="LeavePlan-location" parent="LeavePlan-location-parentBean" />
	<bean id="LeavePlan-location-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Location" />
		<property name="maxLength" value="45" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="true" />
			</bean>
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="45" />
		</property>
		<property name="name" value="location" />
		<property name="label" value="Location" />
	</bean>

	<bean id="LeavePlan-unitOfTime" parent="LeavePlan-unitOfTime-parentBean" />
	<bean id="LeavePlan-unitOfTime-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Unit Of Time" />
		<property name="maxLength" value="1" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern">
				<property name="allowWhitespace" value="false" />
			</bean>
		</property>
		<property name="control">
			<bean parent="RadioControlDefinition" p:valuesFinderClass="org.kuali.hr.time.util.lmUnitOfTimeValues" />
		</property>
		<property name="name" value="unitOfTime" />
		<property name="label" value="Unit Of Time" />
	</bean>

	<bean id="LeavePlan-effectiveDate" parent="LeavePlan-effectiveDate-parentBean" />
	<bean id="LeavePlan-effectiveDate-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Effective Date" />
		<property name="maxLength" value="10" />
		<property name="validationPattern">
			<bean parent="DateValidationPattern" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="10" p:datePicker="true" />
		</property>
		<property name="formatterClass" value="org.kuali.rice.kns.web.format.DateFormatter" />
		<property name="name" value="effectiveDate" />
		<property name="label" value="Effective Date" />
	</bean>

	<bean id="LeavePlan-active" parent="LeavePlan-active-parentBean" />
	<bean id="LeavePlan-active-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Active" />
		<property name="control">
			<bean parent="CheckboxControlDefinition" />
		</property>
		<property name="name" value="active" />
		<property name="label" value="Active" />
		<property name="formatterClass" value="org.kuali.rice.kns.web.format.BooleanFormatter"/>
	</bean>

	<bean id="LeavePlan-timestamp" parent="LeavePlan-timestamp-parentBean" />
	<bean id="LeavePlan-timestamp-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="shortLabel" value="Timestamp" />
		<property name="maxLength" value="15" />

		<property name="control">
			<bean parent="LookupReadonlyControlDefinition" p:size="15" />
		</property>
		<property name="formatterClass"
			value="org.kuali.rice.kns.web.format.TimestampAMPMFormatter" />
		<property name="name" value="timeStamp" />
		<property name="label" value="Time Stamp" />
	</bean>
	
	<!--  Inquiry Definitions  -->
  
  	<bean id="LeavePlan-inquiryDefinition" parent="LeavePlan-inquiryDefinition-parentBean" />

	<bean id="LeavePlan-inquiryDefinition-parentBean" abstract="true"
		parent="InquiryDefinition">
		<property name="inquirySections">
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="numberOfColumns" value="1" />
					<property name="inquiryFields">
						<list>
							<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
							<bean parent="FieldDefinition" p:attributeName="location" />
							<bean parent="FieldDefinition" p:attributeName="description" />
							<bean parent="FieldDefinition" p:attributeName="active" />
						</list>
					</property>
					<property name="title" value="LeavePlan" />
				</bean>
			</list>
		</property>
		<property name="title" value="LeavePlan Inquiry" />
	</bean>

	<!-- Look up Definitions  -->

	<bean id="LeavePlan-lookupDefinition" parent="LeavePlan-lookupDefinition-parentBean" />
	<bean id="LeavePlan-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">
		<property name="lookupableID" value="leavePlanLookupable"></property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="leavePlan" />
				<bean parent="FieldDefinition" p:attributeName="location" />
				<bean parent="FieldDefinition" p:attributeName="description" />
				<bean parent="FieldDefinition" p:attributeName="active"/>
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="leavePlan" />
				<bean parent="FieldDefinition" p:attributeName="description" />
				<bean parent="FieldDefinition" p:attributeName="location" />
				<bean parent="FieldDefinition" p:attributeName="salaryGroup" />
				<bean parent="FieldDefinition" p:attributeName="effectiveDate" />
				<bean parent="FieldDefinition" p:attributeName="unitOfTime" />
				<bean parent="FieldDefinition" p:attributeName="active" />
			</list>
		</property>
		<property name="title" value="Leave Plan Lookup" />
	</bean>

</beans>

