<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:SpringBeans.xml</param-value>
	</context-param>
	<!-- -->
    <filter>
        <filter-name>TkLoginFilter</filter-name>
        <filter-class>edu.iu.uis.hr.TkLoginFilter</filter-class>
        <init-param>
            <param-name>cassvc</param-name>
            <param-value>IU</param-value>
        </init-param>
        <init-param>
            <param-name>loginURL</param-name>
            <param-value>https://cas.iu.edu/cas/login</param-value>
        </init-param>
        <init-param>
            <param-name>validationURL</param-name>
            <param-value>https://cas.iu.edu/cas/serviceValidate</param-value>
        </init-param>
        <init-param>
            <param-name>watchForSafeword</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>sessionAccessSynchronized</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

	<filter>
        <filter-name>UserLoginFilter</filter-name>
        <filter-class>org.kuali.rice.kew.web.UserLoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>HredocAdministrationFilter</filter-name>
        <filter-class>edu.iu.hrms.hredoc.web.HredocAdministrationFilter</filter-class>
    </filter>
	<filter-mapping>
		<filter-name>TkLoginFilter</filter-name>
		<servlet-name>action</servlet-name>
	</filter-mapping>
	
	<filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <servlet-name>action</servlet-name>
    </filter-mapping>
	<filter-mapping>
        <filter-name>HredocAdministrationFilter</filter-name>
        <servlet-name>action</servlet-name>
    </filter-mapping>
	<listener>
		<listener-class>edu.iu.uis.hr.client.ApplicationInitializeListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml,/WEB-INF/application-struts-config.xml</param-value>
		</init-param>
		<!--
        <init-param>
            <param-name>config/en</param-name>
            <param-value>/en/WEB-INF/struts-config.xml</param-value>
        </init-param>
        -->
        <init-param>
            <param-name>config/kew</param-name>
            <param-value>/kew/WEB-INF/struts-config.xml</param-value>
        </init-param>        
        <init-param>
            <param-name>config/ksb</param-name>
            <param-value>/ksb/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>config/kr</param-name>
            <param-value>/kr/WEB-INF/struts-config.xml</param-value>
        </init-param>		        		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- @jspc@ -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- rice -->
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.kuali.rice.kns.web.servlet.KualiDWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>springpath</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>export</servlet-name>
        <servlet-class>org.kuali.rice.kew.export.web.ExportServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>remoting</servlet-name>
        <servlet-class>org.kuali.rice.ksb.messaging.servlet.KSBDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
	<servlet>
		<servlet-name>ajaxServiceTransport</servlet-name>
		<servlet-class>org.appcelerator.transport.AjaxServiceTransportServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>validate</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
		 
    <servlet-mapping>
        <servlet-name>remoting</servlet-name>
        <url-pattern>/remoting/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>export</servlet-name>
        <url-pattern>/export/*</url-pattern>
    </servlet-mapping>
 
	<servlet-mapping>
		<servlet-name>ajaxServiceTransport</servlet-name>
		<url-pattern>/servicebroker</url-pattern>
	</servlet-mapping>
   
</web-app>