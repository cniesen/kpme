<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

    <form-beans>
        <form-bean name="ClockActionForm" type="org.kuali.hr.time.clock.web.ClockActionForm"/>
        <form-bean name="TimeDetailActionForm" type="org.kuali.hr.time.detail.web.TimeDetailActionForm"/>
        <form-bean name="TimeApprovalActionForm" type="org.kuali.hr.time.approval.web.TimeApprovalActionForm"/>
        <form-bean name="PayCalendarActionForm" type="org.kuali.hr.time.paycalendar.web.PayCalendarActionForm"/>
    </form-beans>

    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>

	<action-mappings>
		<action path="/Clock" name="ClockActionForm" scope="request" input="/WEB-INF/jsp/clock.jsp" type="org.kuali.hr.time.clock.web.ClockAction" parameter="methodToCall" validate="false" attribute="KualiForm">
            <forward name="basic" path="/WEB-INF/jsp/clock.jsp" />
        </action>

        <action path="/TimeDetail" name="TimeDetailActionForm" scope="request" input="/WEB-INF/jsp/timeDetail.jsp" type="org.kuali.hr.time.detail.web.TimeDetailAction" parameter="methodToCall" validate="false" attribute="KualiForm">
            <forward name="basic" path="/WEB-INF/jsp/timeDetail.jsp" />
        </action>

        <action path="/TimeApproval" name="TimeApprovalActionForm" scope="request" input="/WEB-INF/jsp/timeApproval.jsp" type="org.kuali.hr.time.approval.web.TimeApprovalAction" parameter="methodToCall" validate="false" attribute="KualiForm">
            <forward name="basic" path="/WEB-INF/jsp/timeApproval.jsp" />
        </action>
        
        <action path="/PayCalendarMaintenance" name="PayCalendarActionForm" scope="session" input="/WEB-INF/jsp/payCalendar.jsp" type="org.kuali.hr.time.paycalendar.web.PayCalendarAction" parameter="methodToCall" validate="true" attribute="KualiForm">
        	<forward name="basic" path="/WEB-INF/jsp/payCalendar.jsp" />
        </action>
	</action-mappings>

    <controller processorClass="org.kuali.hr.time.web.TKRequestProcessor"/>
    <message-resources factory="org.kuali.rice.kns.web.struts.action.KualiPropertyMessageResourcesFactory" parameter="KR-ApplicationResources,org.kuali.rice.kew.ApplicationResources,org.kuali.rice.ksb.messaging.ApplicationResources,KIM-ApplicationResources,ApplicationResources" />

</struts-config>