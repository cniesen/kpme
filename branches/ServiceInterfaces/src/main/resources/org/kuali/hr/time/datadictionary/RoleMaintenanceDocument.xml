<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="RoleMaintenanceDocument" parent="RoleMaintenanceDocument-parentBean"/>

  <bean id="RoleMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
  		p:businessObjectClass="org.kuali.hr.time.roles.TkRole"
  		p:businessRulesClass="org.kuali.hr.time.roles.validation.RoleRule"
  		p:maintainableClass="org.kuali.hr.time.roles.service.RoleMaintainableServiceImpl">
    <property name="maintainableSections">
      <list>
        <ref bean="RoleMaintenanceDocument-RoleMaintenance"/>
      </list>
    </property>
    <property name="documentTypeName" value="RoleDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="RoleMaintenanceDocument-RoleMaintenance" parent="RoleMaintenanceDocument-ClockLocationRuleMaintenance-parentBean"/>

  <bean id="RoleMaintenanceDocument-ClockLocationRuleMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Role Maintenance"/>
    <property name="maintainableItems">
      <list>
      	<bean parent="MaintainableFieldDefinition" p:name="principalId" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="roleName" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="tkAssignmentId" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="workArea" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="department" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="effectiveDate" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="active" p:required="true"/>        
      </list>
    </property>
  </bean>
</beans>