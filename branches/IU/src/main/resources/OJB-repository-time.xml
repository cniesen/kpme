<descriptor-repository version="1.0">


	<jdbc-connection-descriptor 
		jcd-alias="tkDataSource" 
		default-connection="true" 
		platform="MySQL" 
		jdbc-level="3.0"
		batch-mode="false" 
		useAutoCommit="1"
		ignoreAutoCommitExceptions="false">
		
		<sequence-manager className="org.apache.ojb.broker.util.sequence.SequenceManagerNativeImpl">
		</sequence-manager>
		
		<connection-pool maxActive="150"/>
	</jdbc-connection-descriptor>

	<class-descriptor class="org.kuali.hr.time.assignment.Assignment" table="tk_assignment_t">
		<field-descriptor name="assignmentId" 			column="assignment_id" 		jdbc-type="BIGINT" 	primarykey="true" autoincrement="true" sequence-name="tk_assignment_s"/>
		<field-descriptor name="principalId"            column="principal_id"		jdbc-type="VARCHAR" length="40" nullable="false" primarykey="false" />
		<field-descriptor name="jobNumber" 				column="job_number" 		jdbc-type="INTEGER" nullable="false" primarykey="false" />
		<field-descriptor name="effectiveDate" 			column="effdt" 				jdbc-type="DATE"    nullable="false" primarykey="false" />
		<field-descriptor name="earnCode" 				column="erncd" 				jdbc-type="VARCHAR" length="3" nullable="false" primarykey="false" />
		<field-descriptor name="effectiveSequence" 		column="effseq" 			jdbc-type="INTEGER"  nullable="false" primarykey="false" />
		<field-descriptor name="workAreaId" 			column="work_area_id" 		jdbc-type="INTEGER"  nullable="false" primarykey="false" />		
		<field-descriptor name="taskId" 				column="task_id" 			jdbc-type="INTEGER"  nullable="false" primarykey="false" />
		<field-descriptor name="percent" 				column="percent" 			jdbc-type="NUMERIC" precision="5" scale="2" nullable="false" primarykey="false" />				
		<field-descriptor name="objectId" 				column="obj_id" 			jdbc-type="VARCHAR" index="true" />
		<field-descriptor name="versionNumber" 			column="ver_nbr" 			jdbc-type="BIGINT" locking="true" />								
	</class-descriptor>

	<class-descriptor class="org.kuali.hr.time.domain.base.TimeBlock" table="tk_time_block_t">
		<field-descriptor name="documentId" 			column="document_id" 		jdbc-type="VARCHAR" length="14" nullable="false" primarykey="false" />
		<field-descriptor name="jobNumber" 				column="job_number" 		jdbc-type="INTEGER" nullable="false" primarykey="false" />
		<field-descriptor name="workAreaId" 			column="work_area_id" 		jdbc-type="INTEGER"  nullable="false" primarykey="false" />
		<field-descriptor name="taskId" 				column="task_id" 			jdbc-type="INTEGER"  nullable="false" primarykey="false" />
		<field-descriptor name="earnCode" 				column="earncd" 			jdbc-type="VARCHAR" length="3" nullable="false" primarykey="false" />
		<field-descriptor name="beginTimestamp" 		column="begin_ts" 			jdbc-type="TIMESTAMP" nullable="false" primarykey="false" />
		<field-descriptor name="endTimestamp" 			column="end_ts" 			jdbc-type="TIMESTAMP" nullable="false" primarykey="false" />
		<field-descriptor name="clockLogCreate" 		column="clock_log_created"	jdbc-type="BIT" 	length="1" nullable="false"	conversion="org.apache.ojb.broker.accesslayer.conversions.Boolean2IntFieldConversion" />
		<field-descriptor name="hours" 					column="hours" 				jdbc-type="NUMERIC" precision="5" scale="2" nullable="false" primarykey="false" />
		<field-descriptor name="userPrincipalId" 		column="user_principal_id" 	jdbc-type="VARCHAR" length="40" nullable="false" primarykey="false" />
		<field-descriptor name="timestamp" 				column="timestamp" 			jdbc-type="TIMESTAMP" nullable="false" primarykey="false" />
		<field-descriptor name="beginTimestampTimezone" column="begin_ts_tz" 		jdbc-type="VARCHAR" length="50" nullable="false" primarykey="false" />
		<field-descriptor name="endTimestampTimezone" 	column="end_ts_tz" 			jdbc-type="VARCHAR" length="50" nullable="false" primarykey="false" />		
		<field-descriptor name="objectId" 				column="obj_id" 			jdbc-type="VARCHAR" index="true" />
		<field-descriptor name="versionNumber" 			column="ver_nbr" 			jdbc-type="BIGINT" locking="true" />								
	</class-descriptor>

	<class-descriptor class="org.kuali.hr.time.clocklog.ClockLog" table="tk_clock_log_t">
		<field-descriptor name="clockLogId" 					column="clock_log_id" 		jdbc-type="BIGINT" 	primarykey="true" autoincrement="true" sequence-name="tk_clock_log_s"/>
		<field-descriptor name="principalId"            column="principal_id"		jdbc-type="VARCHAR" length="40" nullable="false" primarykey="false" />
		<field-descriptor name="jobNumber"              column="job_number" 		jdbc-type="INTEGER" nullable="false" primarykey="false" />
		<field-descriptor name="workAreaId"             column="work_area_id" 		jdbc-type="INTEGER" nullable="false" primarykey="false" />
		<field-descriptor name="taskId"                 column="task_id" 			jdbc-type="INTEGER" nullable="false" primarykey="false" />
		<field-descriptor name="clockTimestamp"         column="clock_ts" 			jdbc-type="TIMESTAMP" nullable="false" primarykey="false" conversion="org.apache.ojb.broker.accesslayer.conversions.Calendar2TimestampFieldConversion" />
		<field-descriptor name="clockAction"            column="clock_action" 		jdbc-type="VARCHAR" length="2" nullable="false" primarykey="false" />
		<field-descriptor name="ipAddress"              column="ip_address" 		jdbc-type="VARCHAR" length="15" nullable="false" primarykey="false" />
		<field-descriptor name="userPrincipalId"        column="user_principal_id" 	jdbc-type="VARCHAR" length="40" nullable="false" primarykey="false" />
		<field-descriptor name="timestamp"              column="timestamp" 			jdbc-type="TIMESTAMP" nullable="false" primarykey="false" />
		<field-descriptor name="clockTimestampTimezone" column="clock_ts_tz" 		jdbc-type="VARCHAR" length="50" nullable="false" primarykey="false" />
		<field-descriptor name="objectId"               column="obj_id" 			jdbc-type="VARCHAR" index="true" />
		<field-descriptor name="versionNumber"          column="ver_nbr" 			jdbc-type="BIGINT" locking="true" />						
	</class-descriptor>

	<class-descriptor class="org.kuali.hr.time.clock.location.ClockLocationRule" table="tk_clock_location_rl_t">
		<!-- We don't actually need an ID like the following, but as an example, we're using it -->
		<field-descriptor name="clockLocationRuleId" column="CLOCK_LOC_RULE_ID" jdbc-type="BIGINT" primarykey="true" autoincrement="true" sequence-name="tk_clock_location_rl_s"/>
		<!-- put field descriptors -->
		<field-descriptor name="departmentId"    column="department_id" jdbc-type="BIGINT" />
		<field-descriptor name="departmentName"  column="department_org_chart_name" jdbc-type="VARCHAR" length="21"/>
		<field-descriptor name="workArea"        column="work_area_id"  jdbc-type="NUMERIC" precision="10" scale="0" nullable="false" primarykey="false" />
		<field-descriptor name="principalId"     column="principalid"   jdbc-type="VARCHAR" length="10" nullable="false" primarykey="false" />
		<field-descriptor name="jobNumber"       column="job_number"    jdbc-type="NUMERIC" precision="3" scale="0" nullable="false" primarykey="false" />
		<field-descriptor name="effectiveDate"   column="effdt"         jdbc-type="DATE" nullable="false" primarykey="false"/>
		<field-descriptor name="active"          column="eff_status"	jdbc-type="BIT" length="1" nullable="false"	conversion="org.apache.ojb.broker.accesslayer.conversions.Boolean2IntFieldConversion" />
		<field-descriptor name="ipAddress"       column="ip_address"	jdbc-type="VARCHAR" length="15" nullable="false" primarykey="false" />
		<field-descriptor name="userPrincipalId" column="user_principalid"	jdbc-type="VARCHAR" length="10" nullable="false" />
		<field-descriptor name="timestamp"       column="timestamp"         jdbc-type="TIMESTAMP" nullable="false" primarykey="false" />
		<field-descriptor name="objectId"        column="obj_id"            jdbc-type="VARCHAR" index="true" />
		<field-descriptor name="versionNumber"   column="ver_nbr"           jdbc-type="BIGINT" locking="true" />
		
		<!--  
		<reference-descriptor name="department" class-ref="org.kuali.hr.time.department.Department" auto-retrieve="true" auto-delete="false" auto-update="false">
			<foreignkey field-ref="departmentId"/>
		</reference-descriptor>
		-->					
	</class-descriptor>
	
    <class-descriptor class="org.kuali.hr.time.department.Department" table="tk_dept_t">
        <field-descriptor name="departmentId" column="dept_id"     jdbc-type="BIGINT" primarykey="true" autoincrement="true" sequence-name="tk_dept_s"/>
        <field-descriptor name="name"         column="dept_name"   jdbc-type="VARCHAR" length="7" nullable="false" primarykey="false" />
        <field-descriptor name="description"  column="description" jdbc-type="VARCHAR" length="30" nullable="false" primarykey="false" />
        <field-descriptor name="org"          column="org"         jdbc-type="VARCHAR" length="10" nullable="false" primarykey="false" />
        <field-descriptor name="chart"        column="chart"       jdbc-type="VARCHAR" length="10" nullable="false" primarykey="false" />
    </class-descriptor>     	
	
</descriptor-repository>